<!DOCTYPE html>
<html>
<head>
  <title>Quora Posts</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>Quora Posts</h1>

  <% posts.forEach(post => { %>
    <div class="post">
      <p><i>@<%= post.username %></i></p>
      <p><%= post.content %></p>
      <a href="/posts/<%= post.id %>">See in detail</a>
      <a href="/posts/<%= post.id %>/edit">Edit Post</a>
      <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" class="delete-form">
        <button>Delete Post</button>
      </form>
    </div>
  <% }) %>

  <a href="/posts/new">Write new Post</a>
</body>
</html>
